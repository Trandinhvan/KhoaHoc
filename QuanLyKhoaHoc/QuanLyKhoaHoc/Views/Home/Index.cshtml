@{
    Layout = null;
    ViewBag.Title = "Trang chủ";
}
@using QuanLyKhoaHoc.Models;
@model List<MonHoc>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="content">
            <div class="left">
                <h3 class="text__course">Khóa Học:<span class="course-name"></span></h3>
                <div style="border:1px solid #4cff00"></div>
                <div>
                    <ol class="ds-ol">
                        @foreach (var mh in Model)
                        {
                            <li>@mh.TenMonHoc</li>
                        }
                    </ol>  
                </div>
                    
            </div>
            <div class="middle">

            </div>
            <div class="right">
                <div>
                    <h3 class="heading__khoahoc">Khóa Học</h3>
                    <div style="border:1px solid #4cff00"></div>
                    <div class="text__khoahoc">
                        @Html.Action("DanhMucKhoaHoc", "Home")
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</body>
</html>
