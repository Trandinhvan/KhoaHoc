@{
    ViewBag.Title = "KhoaHoc";
}
@using QuanLyKhoaHoc.Models;
<div>
    <div class="content">
        <div class="left">
            <h3>Môn Học: @Model.TenKhoaHoc</h3>
            <div style="border:1px solid #4cff00"></div>
            <div>
                <ol class="ds-ol">
                    @foreach (var mh in Model)
                    {
                        <li>@mh.TenMonHoc</li>
                    }
                </ol>


            </div>

        </div>
        <div class="middle">

        </div>
        <div class="right">
            <div>
                <h3 class="heading__khoahoc">Khóa Học</h3>
                <div class="text__khoahoc">
                    @Html.Action("DanhMucKhoaHoc", "Home")
                </div>
            </div>
        </div>
    </div>
</div>
